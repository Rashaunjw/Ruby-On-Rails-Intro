<div class="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <i class="bi bi-check-circle"></i> <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="page-header mb-4">
    <h1><i class="bi bi-film"></i> Movie Details</h1>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <%= render @movie %>
    </div>
  </div>

  <div class="action-links">
    <%= link_to edit_movie_path(@movie), class: 'btn btn-primary' do %>
      <i class="bi bi-pencil"></i> Edit Movie
    <% end %>
    
    <% if @movie.director.present? %>
      <%= link_to similar_movie_path(@movie), class: 'btn btn-info text-white' do %>
        <i class="bi bi-search"></i> Find Movies With Same Director
      <% end %>
    <% end %>
    
    <%= link_to movies_path, class: 'btn btn-secondary' do %>
      <i class="bi bi-arrow-left"></i> Back to Movies
    <% end %>
    
    <%= button_to @movie, method: :delete, class: 'btn btn-danger', form: { data: { turbo_confirm: 'Are you sure you want to delete this movie?' } } do %>
      <i class="bi bi-trash"></i> Delete Movie
    <% end %>
  </div>
</div>
